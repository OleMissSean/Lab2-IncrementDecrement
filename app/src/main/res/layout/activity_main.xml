<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/wp2">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/HL_Title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/TV_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/currentNum"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/inc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doIncrement"
        android:background="@drawable/up"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/TV_number"
        android:layout_marginTop="320dp"
        android:layout_below="@+id/TV_message"
        android:layout_toRightOf="@+id/TV_number"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

    <TextView
        android:id="@+id/TV_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/TV_message"
        android:layout_centerHorizontal="true"
        android:textSize = "30sp"
        />

    <Button
        android:id="@+id/dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doDecrement"
        android:background="@drawable/down"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/TV_number"
        android:layout_toLeftOf="@+id/TV_number"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_alignTop="@+id/inc" />


</RelativeLayout>
